  movies[:empire_strikes_back],
  movies[:return_of_the_jedi],
]

puts years

# Exercise 5
five_fact = 5 * 4 * 3 * 2 * 1
puts five_fact

six_fact = five_fact * 6
puts six_fact

seven_fact = six_fact * 7
puts seven_fact

eight_fact = seven_fact * 8
puts eight_fact

