# Exercise 2
thousands = 4567 / 1000
puts "thousands: #{thousands}"

hundreds = 4567 % 1000 / 100
puts "hundreds: #{hundreds}"

tens = 4567 % 1000 % 100 / 10
puts "tens: #{tens}"

ones = 4567 % 1000 % 100 % 10
puts "ones: #{ones}"

# Exercise 3
movies = {
  a_new_hope: 1977, 
  empire_strikes_back: 1980, 
  return_of_the_jedi: 1983
}
puts movies[:a_new_hope]
puts movies[:empire_strikes_back]
puts movies[:return_of_the_jedi]

# Exercise 4

